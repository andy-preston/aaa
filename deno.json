{
    "tasks": {
        "cache": "bash -c \"rm -rf ~/.cache/deno\"",
        "run": "deno run -A ./src/cli.ts",
        "check": "deno test --allow-read -- --no-integration && deno lint",
        "integration": "deno test --allow-read integration-tests",
        "getCoverage": "rm -rf _coverage && deno test --allow-read --coverage=_coverage",
        "coverage": {
            "dependencies": ["getCoverage"],
            "command": "deno coverage _coverage"
        }
    },
    "imports": {
        "assert": "jsr:@std/assert",
        "fs": "jsr:@std/fs"
    },
    "compilerOptions": {
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strict": true
    }
}
